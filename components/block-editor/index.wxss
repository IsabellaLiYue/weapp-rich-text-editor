.main-editor-ctl {
  display: flex;
  width: 100%;
  height: 84rpx;
  align-items: center;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 32rpx;
}
.editor-ctl-item {
  margin: 8rpx 25rpx 0rpx 25rpx;
}
.item-icon {
  width: 42rpx;
  height: 36rpx;
}
.common-contain {
  position: relative;
  text-align: center;
  width: 100%;
}
.content-item {
  margin-bottom: 40rpx;
}
.rich-text-editor {
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 4px;
  width: 97%;
}
.video-play {
  width: 100%;
  height: 392rpx;
}
.insert-image image{
  width: 100%;
}
.image-input {
  width: 100%;
  height: 60rpx;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
  text-align: center;
  margin-top: 16rpx;
}
.image-input-text {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  letter-spacing: 0;
  height: 60rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
}
.link-view-dialog {
  position: fixed;
  top: 260rpx;
  width: 557rpx;
  overflow: hidden;
  background: #fff;
  margin-left: 96rpx;
  border-radius: 20rpx;
}
.video-view-dialog {
  position: fixed;
  top: 20%;
  width: 600rpx;
  overflow: hidden;
  background: #fff;
  margin-left: 75rpx;
}
.link-top {
  display: flex;
  justify-content: center;
  height: 126rpx;
  align-items: center;
  color: #333;
  font-size: 32rpx;
}
.link-close {
  text-align: right;
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  top: 18rpx;
  right: 18rpx;
}
.cancel-icon {
  width: 32rpx;
  height: 32rpx;
}
.close-icon {
  width: 32rpx;
  height: 32rpx;
}
.link-content-wap {
  height: 142rpx;
  width: 480rpx;
  margin-left: 38rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}
.link-title-input {
  font-size: 28rpx;
  color: #999;
  height: 71rpx;
}
.link-input-text {
  height: 71rpx;
  margin-left: 10rpx;
}
.link-content-input {
  border-top: 2rpx solid #eee;
}
.video-title-input {
  font-size: 28rpx;
  border: 2rpx solid #eee;
  margin-left: 38rpx;
  height: 60rpx;
  width: 480rpx;
  border-radius: 8rpx;
  color: #999;
}
.link-input {
  height: 60rpx;
  margin-left: 10rpx;
}
.link-tip-message {
  display: flex;
  color: #666;
  font-size: 24rpx;
  margin-top: 26rpx;
  margin-left: 38rpx;
  width: 472rpx;
}
.tip-icon {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 15rpx;
}
.link-content {
  font-size: 32rpx;
  color: #000;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 15rpx;
}

.link-view-button {
  display: flex;
  height: 95rpx;
  margin-top: 70rpx;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #eee;
  font-size: 32rpx;
  color: #E27B48;
}
.video-submit-btn {
  margin-top: 35rpx;
}
.operation {
  text-align: right;
}
.operation-btn-wrp {
  display: flex;
  justify-content: flex-end;
}
.operation-btn {
  text-align: center;
  margin-left: 48rpx;
}
.operation-switch-btn {
  width: 48rpx;
  height: 48rpx;
}
.delete-icon {
  width: 20rpx;
  height: 20rpx;
  margin: 10rpx;
  padding-top: 5rpx;
}
