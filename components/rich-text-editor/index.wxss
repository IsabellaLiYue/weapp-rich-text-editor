@font-face {font-family: "iconfont";
  src:
  url(data:application/font-woff;charset=utf-8;base64,) format('woff');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 36rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-beijingse:before {
  content: "\e621";
}

.icon-zimua:before {
  content: "\e60e";
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  left: 0;
  right: 100%;
  bottom: 0;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.container {
  box-sizing: border-box;
  width: 100%;
  font-size: 32rpx;
  line-height: 1.5rem;
  margin-top: 10rpx;
  color: #000;
  letter-spacing: 0;
  overflow: visible;
  padding-bottom: 20rpx;
}

.scroll-view {
  white-space: nowrap;
  height: 60rpx;
  width: 100%;
  padding: 10rpx 0;
}

.scroll-view-item {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  margin-right: 10rpx;
}

.scroll-items {
  flex-direction: row;
  display: flex;
  align-items: center;
}

.scroll-picker {
  width: 60rpx;
  height: 60rpx;
}

.image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.dialog-button {
  width: 95%;
  height: 60rpx;
  padding: 10rpx 20rpx 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e6e6e6;
}

.picker-view-button {
  width: 50px;
  text-align: center;
  font-size: 35rpx;
  color: #707070;
}

.picker-view-submit {
  float: right;
  color:#48c23d;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
}

.picker-view-dialog {
  position: fixed;
  top: 50%;
  width: 100%;
  position: fixed;
  overflow: hidden;
  bottom: 0;
  background: #fff;
}

.picker-view-item {
  width: 100%;
  height: 100%;
  line-height: 40px;
  display: flex;
  align-items: center;
}

.picker-view-item-content {
  line-height: 32rpx;
  width: 400rpx;
  height: 32rpx;
  text-align: center;
  margin: 0 auto;
}

.pick-view-content {
  width: 100%;
  height: 300px;
}

.picker-view-column {
  width: 60%;
  height: 70%;
  line-height: 60%;
}

.scroll-content {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.image-active {
  background-color: #e6e6e6;
}

.picker-view-mask {
  border-bottom: 5rpx solid #e6e6e6;
  border-top: 5rpx solid #e6e6e6;
}

.mc-img {
  max-width: 100%;
}

.text-editor-index--mc-img, .editor-index--mc-img {
  max-width: 100%;
}